<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PostDetailesFragment"
    android:background="#f0f0f4">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT"
            android:layout_gravity="center"
            android:textSize="20sp">

        </TextView>





    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/bar"
        android:background="#444544"
        ></View>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sp">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="150dp"
                    android:background="#f0f0f4"></ImageView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="430dp"

                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textSize="15sp"
                        android:text="Product Name" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/prod_name"
                            ></ImageView>

                        <TextView
                            android:id="@+id/name"
                            android:layout_marginTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ruba"
                            android:textColor="@color/black"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textSize="15sp"
                        android:text="Price" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/price"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            ></ImageView>

                        <TextView
                            android:id="@+id/price"
                            android:layout_marginTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 nis"
                            android:textColor="@color/black"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"

                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/rounded_corner">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="15sp"
                            android:text="Color" />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ph_icom"
                                ></ImageView>

                            <TextView
                                android:layout_marginTop="1dp"
                                android:id="@+id/color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="white"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/rounded_corner">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="15sp"
                            android:text="Size" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/size"
                                android:layout_marginRight="5dp"
                                ></ImageView>

                            <TextView
                                android:id="@+id/size"
                                android:layout_marginTop="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/rounded_corner">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="15sp"
                            android:text="Category" />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/category"
                                android:layout_marginRight="5dp"
                                ></ImageView>

                            <TextView
                                android:id="@+id/cat"
                                android:layout_marginTop="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="app"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/rounded_corner">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:textSize="15sp"
                            android:text="Description" />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/desc"
                                android:layout_marginRight="5dp"
                                ></ImageView>

                            <TextView
                                android:id="@+id/description"
                                android:layout_marginTop="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="appgfdgrdf"
                                android:textColor="@color/black"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="120dp"
                        android:orientation="vertical"

                        >

                    <Button
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
android:id="@+id/contact"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded"
                        android:text="Contact With Seller"></Button>

                </LinearLayout>


                </LinearLayout>




            </RelativeLayout>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="61dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/border3">

            </ImageView>
            <ImageView
                android:id="@+id/product"
                android:layout_width="295dp"
                android:layout_height="280dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="45dp"

                android:src="@drawable/cactus"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/likes"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/heart1">

                </ImageView>

                <TextView
                    android:id="@+id/post_likes_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="428"
                    android:textSize="10dp">

                </TextView>

                <TextView
                    android:id="@+id/liketext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Likes"
                    android:textSize="10dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/commentt">

            </ImageView>

            <TextView
                android:id="@+id/post_comments_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="428"

                android:textSize="10dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" Comments"

                android:textSize="10dp">

            </TextView>
            </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENT"
            android:layout_gravity="center"
            android:textSize="20sp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/bar"
        android:background="#444544"></View>
    <ImageView
        android:id="@+id/pic"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:background="@drawable/darkborder"
        ></ImageView>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CACTUS"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="157dp"></TextView>


    <TextView
        android:id="@+id/price"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_border"
        android:gravity="center"
        android:text="150$"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lay"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="137dp"></TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/up"
        android:id="@+id/more"
        app:layout_constraintLeft_toRightOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/lay"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TIME REMAINING: "
        android:textSize="20sp"
        android:id="@+id/remain"
        app:layout_constraintTop_toBottomOf="@id/price"
        tools:layout_editor_absoluteX="59dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="7 hours"
        android:id="@+id/time"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/price"
        tools:layout_editor_absoluteX="240dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40sp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded"
        android:text="save"
        android:id="@+id/save"
        app:layout_constraintTop_toBottomOf="@id/remain"
        tools:layout_editor_absoluteX="130dp"
        tools:ignore="MissingConstraints"></Button>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="20dp"
        android:background="@drawable/darkborder"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description:"
            android:textSize="19sp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            ></TextView>


        <TextView
            android:id="@+id/cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>